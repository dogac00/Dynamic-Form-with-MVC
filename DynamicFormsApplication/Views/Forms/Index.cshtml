@model IEnumerable<DynamicFormsApplication.Models.Form>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div style="margin-bottom: 2%;">
    <input class="form-control search-bar" type="text" placeholder="Search by name..." aria-label="Search">
</div>

<div class="table-div">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="search-table">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    Create New Form
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="min-width: 520px; min-height: 320px;">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Create New Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Create">
            <div class="modal-body">
                <div class="form-group">
                    <table class="table form-elements">
                        <tr>
                            <td>
                                <label class="form-check-label">Form Name</label>
                                <input type="text" name="formName" class="form-control">
                            </td>
                            <td>
                                <label class="form-check-label">Form Description</label>
                                <textarea type="text" name="formDescription" class="form-control" rows="3" cols="25"></textarea>
                            </td>
                            <td>
                                <p class="text-center"><b>Add Fields Below</b></p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h4>Form Fields Generator</h4>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="text" id="fieldName" class="form-control" placeholder="Field Name">
                            </td>
                            <td class="text-center">
                                <input type="checkbox" class="form-check-input" id="fieldIsRequired" checked>
                                <label class="form-check-label" for="fieldIsRequired">Required</label>
                            </td>
                            <td>
                                <select id="fieldDataType" class="fieldDataType form-control" name="DataType">
                                    <option value="Number">Number</option>
                                    <option value="String">String</option>
                                </select>
                            </td>
                            <td><a class="add btn btn-primary text-white">Add</a></td>
                        </tr>

                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Add New Form</button>
            </div>
            </form>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        function Contains(first, second) {
            if (first.indexOf(second) != -1) {
                return true;
            }
            else {
                return false;
            }
        }
        $('.search-bar').keyup(function () {
            var textToSearch = $('.search-bar').val().toLowerCase();
            $('.search-table tr').each(function () {
                console.log($(this).firstChild)
                if (Contains($(this.firstChild).text().toLowerCase(), textToSearch)) {
                    $(this).show();
                }
                else {
                    $(this).hide();
                }
            });
        });
    });
</script>

<script>
    var counter = 0;
    var fields =[];
    $(document).ready(function () {
        $($('.add')).click(function () {
            var isRequired = $('#fieldIsRequired').is(':checked');
            var dataType = $('#fieldDataType').find(':selected').val();
            var localFieldName = $('#fieldName').val();
            
            if (localFieldName == "") {
                alert("Field name can not be null.");
                return;
            }

            var fieldName = '<input type="hidden" name="fieldNames" class="form-control" value="' + localFieldName + '">' + localFieldName + '';
            var fieldIsRequired, fieldDataType;
            if (isRequired) {
                fieldIsRequired = '<input type="hidden" name="fieldIsRequireds" class="form-check-input" value="true" checked>Required';
            }
            else {
                fieldIsRequired = '<input type="hidden" name="fieldIsRequireds" class="form-check-input" value="false">Not Required';
            }

            if (dataType == "String") {
                fieldDataType = '<input type="hidden" name="fieldDataTypes" class="form-check-input" value="string">String';
            }
            else {
                fieldDataType = '<input type="hidden" name="fieldDataTypes" class="form-check-input" value="number">Number';
            }
            $($('.form-elements')).append('<tr><td>' + fieldName + '</td><td>' + fieldIsRequired + '</td><td>' + fieldDataType + '</td><td><a class="btn btn-danger text-white remove">Remove</a></td></tr>');
            
            ++counter;
        });

        $($('.form-elements')).on('click', '.remove', function () {
            $(this).parent().parent().remove();
        });
    });
</script>