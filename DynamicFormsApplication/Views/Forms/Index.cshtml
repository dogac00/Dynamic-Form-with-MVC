@model IEnumerable<DynamicFormsApplication.Models.Form>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div style="margin-bottom: 2%;">
    <input class="form-control search-bar" type="text" placeholder="Search by name..." aria-label="Search">
</div>

<div class="table-div">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="search-table">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        function Contains(first, second) {
            if (first.indexOf(second) != -1) {
                return true;
            }
            else {
                return false;
            }
        }
        $('.search-bar').keyup(function () {
            var textToSearch = $('.search-bar').val().toLowerCase();
            $('.search-table tr').each(function () {
                console.log($(this).firstChild)
                if (Contains($(this.firstChild).text().toLowerCase(), textToSearch)) {
                    $(this).show();
                }
                else {
                    $(this).hide();
                }
            });
        });
    });
</script>