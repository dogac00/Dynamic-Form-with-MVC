@model IEnumerable<DynamicFormsApplication.Models.Form>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div style="margin-bottom: 2%;">
    <input class="form-control search-bar" type="text" placeholder="Search by name..." aria-label="Search">
</div>

<div class="table-div">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="search-table">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    Create New Form
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Create New Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <form>
                        <table>
                            <tr>
                                <td><input type="text" name="Name" placeholder="Name"></td>
                                <td><input type="checkbox" name="Reqiured">Required?</td>
                                <td>
                                    <select class="datatype" name="DataType">
                                        <option value="Number">Number</option>
                                        <option value="String">String</option>
                                    </select>
                                </td>
                                <td><button name="">Add More</button></td>
                            </tr>
                        </table>
                        <input type="submit" name="submit" value="Submit">
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        function Contains(first, second) {
            if (first.indexOf(second) != -1) {
                return true;
            }
            else {
                return false;
            }
        }
        $('.search-bar').keyup(function () {
            var textToSearch = $('.search-bar').val().toLowerCase();
            $('.search-table tr').each(function () {
                console.log($(this).firstChild)
                if (Contains($(this.firstChild).text().toLowerCase(), textToSearch)) {
                    $(this).show();
                }
                else {
                    $(this).hide();
                }
            });
        });
    });
</script>