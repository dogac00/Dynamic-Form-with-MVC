@model DynamicFormsApplication.Models.Form

@{
    ViewData["Title"] = "Default";
}

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    Create New Form
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="min-width: 520px; min-height: 320px;">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Create New Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Create">
                <div class="modal-body">
                    <div class="form-group">
                        <table class="table form-elements">
                            <tr>
                                <td>
                                    <label class="form-check-label">Form Name</label>
                                    <input type="text" asp-for="Name" class="form-control">
                                </td>
                                <td>
                                    <label class="form-check-label">Form Description</label>
                                    <textarea type="text" asp-for="Description" class="form-control" rows="3" cols="25"></textarea>
                                </td>
                                <td>
                                    <p class="text-center"><b>Add Fields Below</b></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h4>Form Fields Generator</h4>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="text" id="fieldName" class="form-control" placeholder="Field Name">
                                </td>
                                <td class="text-center">
                                    <input type="checkbox" class="form-check-input" id="fieldIsRequired" checked>
                                    <label class="form-check-label" for="fieldIsRequired">Required</label>
                                </td>
                                <td>
                                    <select id="fieldDataType" class="fieldDataType form-control" name="DataType">
                                        <option value="Number">Number</option>
                                        <option value="String">String</option>
                                    </select>
                                </td>
                                <td><a class="add btn btn-primary text-white">Add</a></td>
                            </tr>

                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary submit-button">Add New Form</button>
                </div>
            </form>
        </div>
    </div>
</div>